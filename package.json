{
  "name": "FabledVault",
  "version": "4.0.0",
  "description": "Agent-agnostic credential management for any AI agent, schema, or system",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vault": "./dist/cli/vault.js",
    "universal-vault": "./dist/server/server.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli/vault.js dist/servers/mcp-server.js",
    "dev": "tsx watch src/server/server.ts",
    "cli": "tsx src/cli/vault.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "benchmark": "tsx src/benchmark/performance.ts",
    "security-audit": "tsx src/security/audit.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "vault",
    "credentials",
    "security",
    "ai-agents",
    "mcp",
    "grant",
    "finance",
    "banking",
    "agent-agnostic",
    "mobile",
    "enterprise"
  ],
  "author": "Flint <flint@hearth.dev>",
  "license": "MIT",
  "dependencies": {
    "@fastify/websocket": "^11.0.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "argon2": "^0.44.0",
    "better-sqlite3": "^11.10.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "fastify": "^5.7.4",
    "graphql": "^16.8.0",
    "mercurius": "^16.7.0",
    "nanoid": "^5.0.0",
    "pino": "^9.0.0",
    "sodium-native": "^5.0.10",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flint/FabledVault.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/flint"
  }
}
